@model ProductMicroservice.Client.Models.ProductModelViewModel

@{
    Layout = "~/Pages/_LayoutPrincipal.cshtml";
}

<div class="container-sm">
    <div class="row">
        <div class="col">
            <h2>Product</h2>
        </div>
        <div class="col">
            <form asp-action="Index" class="input-group mb-3" method="get">
                <div class="d-flex">
                    <input type="text" class="form-control me-2" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" placeholder="Search by name ..." />
                    <input type="submit" value="Search" class="btn btn-primary " />
                </div>
            </form>
        </div>
        <div class="col">
            <a asp-action="Create" class="btn btn-outline-success float-end">AddProduct</a>
        </div>
    </div>
    <div>
        @Html.Partial("~/Pages/_ProductList.cshtml", Model.Products)
    </div>

</div>