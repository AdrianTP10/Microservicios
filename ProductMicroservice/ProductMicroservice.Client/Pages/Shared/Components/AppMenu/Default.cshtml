@using ProductMicroservice.Client.Models
@model ProductMicroservice.Client.Models.MenuViewModel

@{
    var orderedMenuItems = Model.Menu.OrderBy(x => x.Order);
}


<ul class="navbar-nav me-auto mb-2 mb-md-0">
    @foreach(var menuItem in orderedMenuItems)
    {
        @await Html.PartialAsync("~/Pages/Shared/Components/AppMenu/_UserMenuItem.cshtml", new UserMenuItemViewModel
        {
            MenuItem = menuItem,
            RootLevel = true,
            CurrentPageName = Model.CurrentPageName
        })
    }
</ul>
