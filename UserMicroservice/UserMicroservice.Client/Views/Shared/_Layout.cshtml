    <title>@ViewData["Title"] Users - OnlineStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserMicroservice.Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap">
    <style>
        .footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }
        .navbar {
            background-color: #ff5733;
        }

        .navbar-brand {
            font-family: 'Poppins', sans-serif; 
            font-size: 24px; 
            color: #fff; 
        }

        .navbar-nav .nav-link {
            font-family: 'Poppins', sans-serif; 
            font-size: 18px; 
            color: #fff; 
        }
        .navbar-toggler-icon {
            background-color: #fff; 
        }
    </style>
    @RenderSection("Head",false)
</head>
