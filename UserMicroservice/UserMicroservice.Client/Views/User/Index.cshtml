@model List<UserMicroservice.Client.Models.User>
@{
    Layout = "_Layout";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
         
            <div class="row mb-3">
                <div class="col-md-8">
                    <h1>Users</h1>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Add User</a>
                </div>
            </div>

            <div class="mb-4"></div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Role</th>
                            <th>City Id</th>
                            <th>Birthday</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Role</td>
                                <td>@user.CityId</td>
                                <td>@user.Birthday.ToString("dd/MM/yyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm"><i class="fas fa-edit"></i>Edit</a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div> 
    </div>

    
</div>